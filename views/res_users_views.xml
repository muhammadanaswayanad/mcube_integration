<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_mcube" model="ir.ui.view">
        <field name="name">res.users.form.mcube</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences']" position="inside">
                <group name="mcube" string="MCUBE Integration">
                    <field name="mcube_virtual_number" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
